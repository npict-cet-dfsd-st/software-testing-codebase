{
    "name": "tech-trendy-swag-store",
    "version": "1.0.0",
    "description": "Teaching codebase for Software Testing Curriculum",
    "main": "index.js",
    "scripts": {
        "start:app": "concurrently \"json-server --watch db.json --port 3000\" \"http-server public -p 8080\"",
        "test:unit": "jest tests/unit",
        "test:api": "jest tests/api",
        "test:bdd": "cucumber-js tests/bdd/features --require tests/bdd/step_definitions/*.js",
        "test:ui": "node tests/ui/selenium_cart.js",
        "test:perf": "k6 run tests/perf/load_test.js",
        "db:reset": "cp db.seed.json db.json"
    },
    "keywords": [
        "testing",
        "teaching",
        "qa"
    ],
    "author": "Antigravity",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "@cucumber/cucumber": "^10.0.0",
        "chromedriver": "^142.0.3",
        "concurrently": "^8.0.0",
        "cucumber": "^6.0.7",
        "http-server": "^14.0.0",
        "jest": "^29.0.0",
        "json-server": "^0.17.4",
        "k6": "^0.0.0",
        "selenium-webdriver": "^4.0.0",
        "supertest": "^6.0.0"
    }
}
